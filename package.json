{
  "name": "blog-mdx",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "format": "prettier --write . '**/*.{json,md,js,ts,tsx}'",
    "format:write": "prettier --write . '**/*.{json,md,js,ts,tsx}'",
    "format:check": "prettier --check . '**/*.{json,md,js,ts,tsx}'",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "lint:fix": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx . --fix",
    "test": "jest",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "prisma:push": "npx prisma db push",
    "rss": "node scripts/rss.mjs",
    "sitemap": "node scripts/sitemap.mjs",
    "postbuild": "npm run rss && npm run sitemap"
  },
